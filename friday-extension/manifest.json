{
  "manifest_version": 3,
  "name": "Friday",
  "version": "2.0.0",
  "description": "Friday - AI Powered Meeting Assistant with Real-time Transcription",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "friday.png",
      "48": "friday.png",
      "128": "friday.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "identity",
    "activeTab",
    "scripting",
    "tabs",
    "tabCapture",
    "offscreen",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": [
    "https://friday-e65f2.web.app/*",
    "https://www.googleapis.com/*",
    "https://*.google.com/*",
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://*.zoom.com/*",
    "https://api.openai.com/",
    "https://api.openai.com/*",
    "https://api.deepgram.com/*",
    "wss://api.deepgram.com/*",
    "http://localhost:3000/*",
    "http://localhost:8080/*"
  ],
  "side_panel": {
    "default_path": "chat.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.googleapis.com https://*.firebaseio.com https://*.cloudfunctions.net wss://*.firebaseio.com https://firestore.googleapis.com https://securetoken.googleapis.com https://identitytoolkit.googleapis.com wss://api.deepgram.com https://api.deepgram.com http://localhost:3000 http://localhost:8080;"
  },
  "oauth2": {
    "client_id": "837567341884-dv012smvdultmrmkh1ibv6gi1396fifd.apps.googleusercontent.com",
    "scopes": [
      "profile",
      "email",
      "https://www.googleapis.com/auth/drive.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "icons": {
    "16": "friday.png",
    "48": "friday.png",
    "128": "friday.png"
  },
  "content_scripts": [],
  "web_accessible_resources": [
    {
      "resources": [
        "transcription-content.js",
        "transcription-content-v2.js",
        "transcription-content-v3.js",
        "deepgram-transcription.js",
        "toast-notifications.js",
        "chat.html",
        "libs/mammoth.browser.min.js",
        "libs/pdf.js",
        "libs/pdf.worker.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}